@model PetShopApp.Models.Animal

@{
    ViewBag.Title = "CreateAnimal";
}

<h1 id="header" class="text-info">Create New Animal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label lead fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label lead fw-bold"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPhoto" class="control-label lead fw-bold"></label>
                <div class="mb-3">
                    <label for="formFileSm" class="form-label"></label>
                    <input class="form-control form-control-sm" accept="image/*" id="formFileSm" asp-for="AnimalPhoto">
                </div>
                <span asp-validation-for="AnimalPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label lead fw-bold"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label lead fw-bold"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
                    <option value="1">Mammals</option>
                    <option value="2">Reptiles</option>
                    <option value="3">Birds</option>
                    <option value="4">Amphibians</option>
                    <option value="5">Shellfish</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Go Back</a>
</div>