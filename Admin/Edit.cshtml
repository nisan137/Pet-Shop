@model PetShopApp.Models.Animal

@{
    ViewBag.Title = "EditAnimal";
}

<h1 class="text-info">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label lead fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label lead fw-bold"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PhotoUrl" />
            <div class="form-group">
                <label asp-for="AnimalPhoto" class="control-label lead fw-bold"></label>
                <div class="mb-3">
                    <label for="formFileSm" class="form-label"></label>
                        <img alt="Picture ;)" width="100px" height="100px" src="~/images/@Model.PhotoUrl" />
                    <input class="form-control form-control-sm" id="formFileSm" asp-for="AnimalPhoto">
                </div>
                <span asp-validation-for="AnimalPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label lead fw-bold"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label lead fw-bold"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="1">Mammals</option>
                    <option value="2">Reptiles</option>
                    <option value="3">Birds</option>
                    <option value="4">Amphibians</option>
                    <option value="5">Shellfish</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="Edit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Go Back</a>
</div>

